        {
          "name": "Create game report (user)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.variables.set('reportMessage', `Postman report ${Date.now()}`);",
                  "pm.environment.set('reportMessage', pm.variables.get('reportMessage'));"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('201 Created', () => pm.response.code === 201);"
                ]
