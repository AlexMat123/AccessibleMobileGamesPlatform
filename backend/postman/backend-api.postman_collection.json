          "url": {
              "raw": "{{baseUrl}}/games/{{gameId}}/reports",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "games",
                "{{gameId}}",
                "reports"
              ]
            }
          }
        },
        {
          "name": "Admin login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('200 OK', () => pm.response.code === 200);",
                  "const json = pm.response.json();",
                  "pm.environment.set('adminToken', json.token);",
                  "pm.expect(json).to.have.property('token');"
                ]
