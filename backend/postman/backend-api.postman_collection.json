        {
          "name": "List game reports (admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('200 OK', () => pm.response.code === 200);",
                  "const reports = pm.response.json();",
                  "pm.expect(reports).to.be.an('array');",
                  "if (reports.length) {",
                  "  const targetMsg = pm.environment.get('reportMessage');",
                  "  const match = targetMsg ? reports.find(r => r.message === targetMsg) : reports[0];",
                  "  const target = match || reports[0];",
                  "  pm.environment.set('reportId', target.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/games/reports",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "games",
                "reports"
              ]
            }
          }
        },
        {
          "name": "Resolve latest report (admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('204 No Content', () => pm.response.code === 204);"
                ]
              }
            }
